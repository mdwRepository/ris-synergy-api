{
  "openapi": "3.0.1",
  "info": {
    "title": "OrgUnit Api",
    "description": "### Id for Example OrgUnit:\n\n> ***OrgUnit:*** AAUORG1234",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000/ris-synergy"
    }
  ],
  "tags": [
    {
      "name": "OrgUnits",
      "description": "Endpoints for Organizational Units"
    }
  ],
  "paths": {
    "/v1/orgUnits/organigram": {
      "get": {
        "tags": ["OrgUnits"],
        "summary": "GET Endpoint for the Organigram",
        "description": "Get Endpoint for retrieving an organizational tree of an University",
        "operationId": "findAll",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrgUnit"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BaseOrgUnit": {
        "required": ["id"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "array",
            "description": "The full name of the organisation unit.",
            "items": {
              "$ref": "#/components/schemas/Text"
            }
          }
        },
        "description": "Base OrgUnit"
      },
      "Identifier": {
        "type": "object",
        "properties": {
          "type": {
            "$ref": "#/components/schemas/IdentifierTypeEnum"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "IdentifierTypeEnum": {
        "type": "string",
        "description": "[Vocabulary](https://documentation.forschungsdaten.at/?page_id=937)",
        "enum": [
          "CROSSREF_GRANTID",
          "PROJECT_NUMBER",
          "APPLICATION_NUMBER",
          "ORCID",
          "ROR",
          "RINGGOLD",
          "RIS_SYNERGY"
        ]
      },
      "LevelEnum": {
        "type": "string",
        "description": "[Vocabulary](https://documentation.forschungsdaten.at/?page_id=902)",
        "enum": ["LEVEL_1", "LEVEL_2", "LEVEL_3"]
      },
      "OrgUnit": {
        "required": ["id", "level", "name", "startDate", "type"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "minLength": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Text"
            }
          },
          "type": {
            "$ref": "#/components/schemas/OrganisationTypeEnum"
          },
          "acronym": {
            "type": "string"
          },
          "electronicAddress": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "partOf": {
            "$ref": "#/components/schemas/BaseOrgUnit"
          },
          "identifiers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Identifier"
            }
          },
          "address": {
            "$ref": "#/components/schemas/PostAddress"
          },
          "submissionSystem": {
            "type": "string"
          },
          "level": {
            "$ref": "#/components/schemas/LevelEnum"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "website": {
            "type": "string"
          }
        }
      },
      "OrganisationTypeEnum": {
        "type": "string",
        "description": "[Vocabulary](https://documentation.forschungsdaten.at/?page_id=898)",
        "enum": [
          "UNIVERSITY",
          "VICE_RECTORATE",
          "FACULTY",
          "SCHOOL",
          "DEPARTMENT",
          "UNIT",
          "CENTRAL_SERVICES",
          "UNIVERSITY_CENTRE",
          "CLINIC",
          "CLINICAL_UNIT"
        ]
      },
      "PostAddress": {
        "type": "object",
        "properties": {
          "countryCode": {
            "type": "string"
          },
          "addrline1": {
            "type": "string"
          },
          "postCode": {
            "type": "string"
          },
          "cityTown": {
            "type": "string"
          },
          "stateOfCountry": {
            "type": "string"
          }
        }
      },
      "Text": {
        "required": ["lang", "text", "trans"],
        "type": "object",
        "properties": {
          "lang": {
            "type": "string"
          },
          "trans": {
            "$ref": "#/components/schemas/TranslationEnum"
          },
          "text": {
            "type": "string"
          }
        },
        "description": "Class for Multilingual Strings; Including Language Code and Translation Method"
      },
      "TranslationEnum": {
        "type": "string",
        "description": "O=Original; H=Human-Translated; M=Machine-Translated",
        "enum": ["O", "H", "M"]
      }
    }
  }
}
